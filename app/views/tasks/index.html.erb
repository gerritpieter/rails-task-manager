<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.completed %>
      <% if task.completed == true %>
      [x]
      <% else %>
      [ ]
      <% end %>
      <%= link_to task.title, task_path(task.id) %>

      <%= link_to "Delete #{task.title}",
            delete_path(task.id),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

    </li>
  <% end %>
</ul>


<%= link_to "Create a new task", tasks_new_path %>
